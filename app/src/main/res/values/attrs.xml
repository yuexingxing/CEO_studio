<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundedNetworkImageView">
        <attr name="android:src"/>
        <attr name="rniv_errorImage" format="reference"/>
        <attr name="rniv_isCircle" format="boolean"/>
        <attr name="rniv_cornerRadius" format="dimension|reference"/>
    </declare-styleable>

    <!--圆角进度条-->
    <declare-styleable name="RoundCornerProgress">
        <attr name="rcReverse" format="boolean" />
        <attr name="rcProgress" format="float" />
        <attr name="rcMax" format="float" />
        <attr name="rcSecondaryProgress" format="float" />
        <attr name="rcBackgroundPadding" format="dimension" />
        <attr name="rcRadius" format="dimension" />
        <attr name="rcProgressColor" format="color" />
        <attr name="rcSecondaryProgressColor" format="color" />
        <attr name="rcBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="android:gravity" />
    </declare-styleable>

    <declare-styleable name="FlowLayout_Layout">
        <attr name="android:layout_gravity" />
    </declare-styleable>

    <declare-styleable name="MaxHeightView">
        <attr name="mhv_HeightRatio" format="float|reference" />
        <attr name="mhv_HeightDimen" format="dimension|reference" />
    </declare-styleable>


</resources>