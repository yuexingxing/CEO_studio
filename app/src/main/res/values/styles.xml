    </style>

    <style name="ll_w_m_h_c" parent="base_w_m">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ll_m_m_h" parent="base_m_m">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ll_m_m_h_c" parent="ll_m_m_h">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ll_m_w_h_c" parent="ll_m_w_h">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="root_layout_ll_gray" parent="ll_m_m_v">
        <item name="android:background">@color/layout_bg</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="root_layout_ll_white" parent="ll_m_m_v">
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="root_layout_empty_view">
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:background">@mipmap/img_empty</item>
    </style>

    <style name="root_layout_empty_finished_view">
        <item name="android:layout_width">@dimen/common_empty_view_width_190</item>
        <item name="android:layout_height">@dimen/common_empty_view_height_270</item>
