    <!-- 基本EditText Style -->
    <style name="base_et">
        <item name="android:textColorHint">@color/et_hint_color</item>
        <item name="android:textColor">@color/et_text_color</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 通用EditText Style -->
    <style name="et" parent="base_et">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="et_search" parent="base_et">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <!--<item name="android:digits">1234567890</item>-->
        <!--<item name="android:inputType">number</item>-->
        <item name="android:maxLength">25</item>
    </style>

    <style name="et_phone" parent="base_et">
        <item name="android:singleLine">true</item>
        <item name="android:digits">1234567890</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">13</item>
    </style>

    <style name="et_code" parent="base_et">
        <item name="android:singleLine">true</item>
        <item name="android:digits">1234567890</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">6</item>
    </style>

    <style name="et_psd" parent="base_et">
        <item name="android:maxLength">16</item>
        <item name="android:digits">
            qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890.
        </item>
        <item name="android:password">true</item>
        <item name="android:hint">输入密码</item>
    </style>

    <!-- ListView -->
    <style name="base_list" parent="base_m_w">
        <item name="android:divider">@color/driver</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:scrollbars">none</item>
    </style>

