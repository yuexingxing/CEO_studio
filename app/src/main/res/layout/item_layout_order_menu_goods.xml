<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_order_menu_goods_name"
            android:text="酸菜鱼"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="13sp"
            android:textColor="@color/order_666666"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"  />

        <TextView
            android:id="@+id/item_order_menu_goods_count"
            android:text="1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/order_666666"
            android:layout_marginLeft="12dp"
            android:gravity="center"  />

        <TextView
            android:id="@+id/item_order_menu_goods_fee"
            android:text="0.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/order_666666"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical|right"  />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_order_menu_goods_send_fee_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:text="配送费"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_weight="3"
            android:textSize="13sp"
            android:textColor="@color/order_666666"
            android:gravity="center_vertical"  />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"  />

        <TextView
            android:id="@+id/item_order_menu_goods_send_fee"
            android:text="0.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/order_666666"
            android:layout_marginRight="12dp"
            android:gravity="center|right"  />

    </LinearLayout>

</LinearLayout>