<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_account_layout_height_40"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_no_confirm"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/text_black"
            android:text="未确认订单"/>

        <View
            android:id="@+id/view_order_not_confirm"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/main_color" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_ok_confirm"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/text_loading_gray"
            android:text="已确认订单"/>

        <View
            android:id="@+id/view_order_ok_confirm"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:visibility="invisible"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/main_color" />

    </LinearLayout>





</LinearLayout>