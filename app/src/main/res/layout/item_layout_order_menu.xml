<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_order_menu_img_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                app:srcCompat="@drawable/order_time"
                android:layout_gravity="center_vertical"  />
        </LinearLayout>

        <TextView
            android:id="@+id/item_order_menu_time"
            android:text="11:40-12:40"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/item_order_menu_order_state"
            android:text="已送达"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:gravity="center_vertical"  />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="47dp"
        android:background="@color/driver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                app:srcCompat="@drawable/order_address"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_order_menu_address"
            android:text="北区宿舍楼307"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/order_phone"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/item_order_menu_rec_name"
            android:text="豆豆"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:background="@color/driver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_order_menu_store_name"
            android:text="金茂餐饮-档口"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            android:gravity="center_vertical"  />

        <LinearLayout
            android:id="@+id/item_order_menu_sort"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/order_arrow"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_order_menu_goods_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/listview_public" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_order_menu_goods_total_fee_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:text="合计"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"  />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"  />

        <TextView
            android:id="@+id/item_order_menu_goods_total_fee"
            android:text="0.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:layout_marginRight="12dp"
            android:gravity="center|right"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:background="@color/driver" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:text="订单号:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"
            android:textColor="@color/text_black"
            android:gravity="center_vertical"  />

        <TextView
            android:id="@+id/item_order_menu_ordernum"
            android:text="123467965"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/text_black"
            android:gravity="center_vertical"  />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right">

            <Button
                android:text="确认送达"
                android:layout_width="87dp"
                android:layout_height="28dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="13sp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_radius_order_main_color"
                android:id="@+id/item_order_menu_confirm" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="2000dp"
        android:layout_height="1dp" />


</LinearLayout>