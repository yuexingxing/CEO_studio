<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/root_layout_ll_white"
    android:orientation="horizontal">
r<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="5"
    android:layout_marginTop="@dimen/common_margin_16">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/icon_hook_2"
        android:layout_gravity="center" />

    <View style="@style/driver_v_green"
        android:layout_height="85dp"
        android:background="@color/green"
        android:layout_gravity="center"/>


    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@mipmap/icon_circle"
        android:layout_gravity="center" />


    <View style="@style/driver_v_green"
        android:layout_height="85dp"
        android:background="@color/green"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/icon_money"
        android:layout_gravity="center"/>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/common_margin_16">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="提现申请金额"
                android:textSize="@dimen/common_size_16sp"
                android:textColor="@color/text_black_1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到账金额:"
                    android:textSize="@dimen/common_size_12sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_black_2"/>

                <TextView
                    android:id="@+id/tv_withdraw_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_default_cash"
                    android:textSize="@dimen/common_size_12sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_black_2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_default_yuan"
                    android:textSize="@dimen/common_size_12sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_black_2"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="提现申请已提交，等待银行处理"
                android:textSize="@dimen/common_size_16sp"
                android:textColor="@color/text_black_1"/>
            <TextView
                android:id="@+id/tv_date_withdraw_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-07-07  10:04"
                android:textSize="@dimen/common_size_12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_black_2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="预计到账时间"
                android:textSize="@dimen/common_size_16sp"
                android:textColor="@color/text_black_1"/>
            <TextView
                android:id="@+id/tv_date_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-07-08   10:04"
                android:textSize="@dimen/common_size_12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_black_2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
