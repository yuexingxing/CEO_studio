<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rl_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:text="手机号码"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:gravity="center_vertical"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:textSize="15sp"
            android:text="18260061895"
            android:textColor="@color/text_loading_gray"
            android:hint="请输入手机号码"
            android:id="@+id/login_phone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:background="@color/driver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:text="密码"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:gravity="center_vertical"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:hint="请输入密码"
            android:textSize="15sp"
            android:text="123456"
            android:textColor="@color/text_loading_gray"
            android:id="@+id/login_psd" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:background="@color/driver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:text="登录"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_radius_order_gray_color"
            android:layout_marginRight="20dp"
            android:textColor="@color/text_loading_gray"
            android:id="@+id/login_commit"  />

    </LinearLayout>
</LinearLayout>