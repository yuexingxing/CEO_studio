<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_add_mess_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_show_date"
        style="@style/text_12_black_1"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_16"
        android:paddingBottom="@dimen/com_text_vertical_margin_6"
        android:paddingTop="@dimen/com_text_vertical_margin_6"
        android:textColor="@color/green" />

    <View style="@style/driver_h" />

    <LinearLayout
        android:id="@+id/ll_root_show_mess_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_mess_time"
        android:clickable="true"
        android:background="@drawable/slt_layout_rect_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_layout_height_50"
        android:text="@string/msg_new_added_business_date"
        android:gravity="center"
        android:textSize="@dimen/common_size_16sp"
        android:textColor="@color/red_orange" />

</LinearLayout>
