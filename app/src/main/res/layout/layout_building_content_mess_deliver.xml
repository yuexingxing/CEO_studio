<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root_apart_zones"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/content_apartment_zone"
                style="@style/text_12_black_1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/common_margin_left_40"
                android:paddingRight="@dimen/common_margin_right_40"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="content" />

            <ImageView
                android:id="@+id/iv_hock_delivered"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_margin_8"
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:src="@mipmap/icon_delivered"/>

        </RelativeLayout>

        <View style="@style/driver_h"></View>

    </LinearLayout>

