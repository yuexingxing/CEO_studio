<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_item_mess"
        android:clickable="true"
        android:background="@drawable/slt_layout_rect_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_field_height_44"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_mess_name"
            style="@style/text_16_black_1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_16"
            tools:text="@string/msg_default_mess_name" />

        <TextView
            android:id="@+id/tv_business_state"
            style="@style/text_16_black_3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin_16"

            android:drawablePadding="@dimen/activity_horizontal_margin_16"
            android:drawableRight="@mipmap/icon_jiantou_r"
            android:textColor="@color/green"
            android:text="@string/msg_under_business" />

        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:paddingRight="@dimen/activity_horizontal_margin_16"-->
            <!--android:src="@mipmap/icon_jiantou_r" />-->
    </RelativeLayout>
    <View
        style="@style/driver_h"/>

</LinearLayout>
