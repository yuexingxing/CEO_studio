<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:text="金额(元)"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:layout_marginLeft="12dp"/>

        <EditText
            android:id="@+id/with_draw_fee"
            android:text=""
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入金额"
            android:textSize="13sp"
            android:inputType="number"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp">

        <TextView
            android:text="可提现余额: "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/with_draw_fee2"
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/with_draw_tip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/withdraw_problem"  />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/with_draw_zhifubao_layout_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/zhifubao"  />

        <TextView
            android:text="支付宝支付"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:id="@+id/with_draw_zhifubao_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/with_draw_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/order_select"  />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/driver" />

    <LinearLayout
        android:id="@+id/with_draw_weixin_layout_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/weixin"  />

        <TextView
            android:text="微信支付"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:id="@+id/with_draw_weixin_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/with_draw_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/order_unselected"  />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:text="确认提现"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_radius_order_main_color"
            android:layout_marginRight="20dp"
            android:id="@+id/with_draw_commit"  />

        <TextView
            android:text="微信和支付宝需收取每笔1%手续费"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="13sp"/>
    </LinearLayout>
</LinearLayout>