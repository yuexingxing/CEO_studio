<?xml version="1.0" encoding="utf-8"?>
<!-- 此布局在点击右侧批量确认之后从底部弹出 -->
<RelativeLayout
    android:id="@+id/rl_bottom_sheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/common_margin_16"
    android:paddingRight="@dimen/common_margin_16"
    android:background="@drawable/shape_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_bar_height"
    android:layout_alignParentBottom="true">


    <ImageView
        android:id="@+id/iv_order_all_confirm"
        android:layout_centerVertical="true"
        android:padding="@dimen/common_margin_8"
        android:layout_width="@dimen/common_margin_32"
        android:layout_height="@dimen/common_margin_32"
        android:src="@mipmap/icon_order_unconfirmed"/>

    <TextView
        android:id="@+id/tv_1"
        android:layout_toRightOf="@+id/iv_order_all_confirm"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_size_14sp"
        android:text="全选"/>

    <TextView
        android:id="@+id/tv_2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_10"
        android:layout_toRightOf="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_size_14sp"
        android:text="共"/>

    <TextView
        android:id="@+id/tv_order_count"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_10"
        android:layout_toRightOf="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:textSize="@dimen/common_size_18sp"
        android:text="0"/>

    <TextView
        android:id="@+id/tv_3"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_10"
        android:layout_toRightOf="@+id/tv_order_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_size_14sp"
        android:text="单"/>


    <Button
        android:id="@+id/btn_multi_confirm_order"
        style="@style/btn_green"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/common_margin_8"
        android:layout_marginBottom="@dimen/common_margin_8"
        android:text="一键确认"/>


</RelativeLayout>