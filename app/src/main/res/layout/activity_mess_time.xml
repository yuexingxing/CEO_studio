<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/root_layout_ll_gray"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_root"
                style="@style/root_layout_ll_gray"
                android:orientation="vertical"/>
            <Button
                style="@style/btn_green"
                android:id="@+id/btn_confirm"
                android:layout_marginTop="@dimen/activity_vertical_margin_16"
                android:layout_marginLeft="@dimen/common_margin_16"
                android:layout_marginRight="@dimen/common_margin_16"
                android:layout_marginBottom="@dimen/common_margin_16"
                android:text="@string/msg_save"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
