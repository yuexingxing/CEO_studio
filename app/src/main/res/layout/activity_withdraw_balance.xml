<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/root_layout_ll_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_80"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            style="@style/text_16_black_1"
            android:text="@string/msg_withdraw_cash"/>
        <TextView
            android:id="@+id/tv_open_bank"
            style="@style/text_16_black_1"
            android:textColor="@color/text_black_bank"
            android:text="@string/msg_jiao_tong_yin_hang"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_account_layout_height_40"
        android:gravity="center_horizontal">

        <TextView
            style="@style/text_16_black_1"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="提现金额:"
            android:textColor="@color/text_black_1"
            android:layout_marginLeft="@dimen/common_margin_16"/>

        <EditText
            android:id="@+id/et_withdraw_money"
            style="@style/base_et"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:hint="输入提现金额"
            android:layout_marginLeft="@dimen/common_margin_100"
            android:layout_marginRight="@dimen/common_margin_16"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        style="@style/driver_h"
        android:layout_marginRight="@dimen/common_margin_16"
        android:layout_marginLeft="@dimen/common_margin_16">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_account_layout_height_40"
        android:gravity="center_horizontal">

        <TextView
            style="@style/text_16_black_1"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="密码:"
            android:textColor="@color/text_black_1"
            android:layout_marginLeft="@dimen/common_margin_16"/>

        <EditText
            android:id="@+id/et_withdraw_password"
            style="@style/base_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="输入提现密码"
            android:layout_marginLeft="@dimen/common_margin_100"
            android:layout_marginRight="@dimen/common_margin_16"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <View
        style="@style/driver_h"
        android:layout_marginRight="@dimen/common_margin_16"
        android:layout_marginLeft="@dimen/common_margin_16">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_account_layout_height_40">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:orientation="horizontal">
            <TextView
                style="@style/text_12_black_2"
                android:text="@string/msg_default_withdraw_balance"/>
            <TextView
                android:id="@+id/tv_withdraw_money_limited"
                style="@style/text_12_black_2"/>
            <TextView
                style="@style/text_12_black_2"
                android:text="元"/>
        </LinearLayout>
        <View
            style="@style/driver_h"
            android:layout_alignParentBottom="true">
        </View>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_withdraw_balance_layout_padding_top_25"
        android:paddingLeft="@dimen/activity_withdraw_balance_layout_padding_left_60"
        android:paddingRight="@dimen/activity_withdraw_balance_layout_padding_right_60"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_confirm"
            style="@style/btn_green"
            android:layout_marginTop="@dimen/activity_vertical_margin_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_44"
            android:layout_alignParentBottom="true"
            android:text="@string/msg_confirm_2" />

    </LinearLayout>

</LinearLayout>
